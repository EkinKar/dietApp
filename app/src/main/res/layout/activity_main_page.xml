<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/good_morning_page">

    <ImageButton
        android:id="@+id/BtnBMIMainPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="getBmiPage"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/BtnMyDietListMainPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/calculate_bmi_btn" />

    <ImageButton
        android:id="@+id/BtnMyDietListMainPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="getDietListPage"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/BtnCreatDietListMainPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnBMIMainPage"
        android:src="@drawable/my_diet_list_btn" />


    <ImageButton
        android:id="@+id/BtnCreatDietListMainPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="createDietListPage"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/BtnBlogsMainPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnMyDietListMainPage"
        android:src="@drawable/create_diet_list_btn" />

    <ImageButton
        android:id="@+id/BtnBlogsMainPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="getBlogsPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnCreatDietListMainPage"
        android:src="@drawable/blogs_btn" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="88dp"
        android:text="Good Morning!"
        android:textAlignment="center"
        android:textColor="#009A7E"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/BtnBMIMainPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>