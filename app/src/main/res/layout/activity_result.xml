<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bmi_score_page"
    android:textAlignment="center">

    <TextView
        android:id="@+id/textBMIScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="24dp"
        android:text="Your BMI score is ......."
        android:textAlignment="center"
        android:textColor="#009A7E"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textBMIScale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textBMIScale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:text="You are ........!"
        android:textAlignment="center"
        android:textColor="#009A7E"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageBMIScale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBMIScore" />

    <ImageView
        android:id="@+id/imageBMIScale"
        android:layout_width="266dp"
        android:layout_height="211dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textBMIExplain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBMIScale"
        android:src="@drawable/bmi_calculate" />

    <TextView
        android:id="@+id/textBMIExplain"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="24dp"
        android:text="Don't worry.safsafsafdgfadgsdgdsgsdgdsgdsgsgsdgdgdsgfdsfdsfsdfffddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddsgsdg"
        android:textAlignment="center"
        android:textColor="#03392F"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/BtnGetMyDietPlan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBMIScale" />

    <ImageButton
        android:id="@+id/BtnGetMyDietPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="53dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="getDietPlanPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBMIExplain"
        android:src="@drawable/get_my_diet_list_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>