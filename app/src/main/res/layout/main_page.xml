<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/good_morning_page">

    <ImageButton
        android:id="@+id/BtnBMIMainPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="getBmiPage"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/BtnMyDietListMainPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calculate_bmi" />

    <ImageButton
        android:id="@+id/BtnMyDietListMainPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="getDietListPage"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/BtnCreatDietListMainPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnBMIMainPage"
        app:srcCompat="@drawable/my_diet_list" />


    <ImageButton
        android:id="@+id/BtnCreatDietListMainPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="createDietListPage"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/BtnBlogsMainPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnMyDietListMainPage"
        app:srcCompat="@drawable/creat_diet_list" />

    <ImageButton
        android:id="@+id/BtnBlogsMainPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="getBlogsPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnCreatDietListMainPage"
        app:srcCompat="@drawable/blogs" />


</androidx.constraintlayout.widget.ConstraintLayout>